<Window x:Class="Buffet_Galina_WPF.AddDish"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Buffet_Galina_WPF"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Страница добавления" Height="450" Width="800"  >
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="110" />
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>



        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Background="White" Grid.RowSpan="2"  >
            <Image Source="Images/header3.png" Height="119" Width="372"/>

            <!--<TextBlock Text= "Buffet Galina" FontSize="31" HorizontalAlignment="Center"  Foreground="Black"/>-->

        </StackPanel>

        <StackPanel Grid.Row="0" Grid.RowSpan="2" HorizontalAlignment="Left" >
            <Button Grid.Row="0" Background="White" Margin="0 5 30 0" BorderThickness="0" Click="Back_Click">
                <Image Source="Images/arrow1.png" Height="100" Width="100"  />
            </Button>
        </StackPanel>

        <StackPanel  Grid.Row="1" Background="#FF326D" >
            <Border BorderThickness="1" BorderBrush="Black" Height="300" Margin="15" Padding="5" Grid.Row="1" Background="#FF326D" >
                <StackPanel Background="#FF326D"  >
                    <TextBlock Text="Название" Foreground="#BC22A2" Background="#FFE0EF" Width="60" HorizontalAlignment="Left"/>
                    <TextBox Text="{Binding DishDTO.Title}"/>
                    <TextBlock Text="Цена" Foreground="#BC22A2" Background="#FFE0EF" Width="60" HorizontalAlignment="Left"/>
                    <TextBox Text="{Binding DishDTO.Price}"/>
                    <TextBlock Text="Категория" Foreground="#BC22A2" Background="#FFE0EF" Width="60" HorizontalAlignment="Left"/>
                    <ComboBox ItemsSource="{Binding Categories}" DisplayMemberPath="Title" SelectedItem="{Binding SelectedCategories}"/>
                    <Grid>
                        <TextBlock Text="Все продукты" Foreground="#BC22A2" Background="#FFE0EF" Width="Auto" HorizontalAlignment="Left" />
                        <TextBlock Text="Выбранные продукты" Foreground="#BC22A2" Background="#FFE0EF" Width="Auto" HorizontalAlignment="Right" />
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <ListBox Height="150" ItemsSource="{Binding Products}" SelectedItem="{Binding SelectProductAdd}" Grid.Column="0" DisplayMemberPath="Title"/>
                        <ListBox Height="150" ItemsSource="{Binding SelectedProducts}" SelectedItem="{Binding SelectProductRemove}" Grid.Column="2" DisplayMemberPath="Title"/>
                        <StackPanel  Grid.Column="1" VerticalAlignment="Center">
                            <Button Content="->" Click="AddPro_Click" />
                            <Button Content="&lt;-" Click="RemovePro_Click"/>
                            <Button Content="Удалить всё" Click="Remove_Click"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>

        <StackPanel Grid.Column="1" Grid.Row="1" Background="#FF326D">
            <Border BorderThickness="1" BorderBrush="Black" Margin="15" Padding="5" Background="White">
                <StackPanel HorizontalAlignment="Center">
                    <Image Height="200" Source="{Binding DishDTO.Image}"/>
                    <Button Content="Выбрать фото" Click="SelectPhoto" Background="#FFE0EF" Foreground="#BC22A2"/>
                </StackPanel>
            </Border>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button Content="Сохранить" Click="SaveClose_Click" Background="#FFE0EF" Foreground="#BC22A2"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
